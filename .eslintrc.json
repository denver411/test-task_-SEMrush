{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true, 
    	"jest": true
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "no-underscore-dangle": ["error", {
            "allowAfterThis": true,
            "allow": ["foo_", "_bar"]
        }],
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }],
        "class-methods-use-this": ["error", {
            "exceptMethods": ["createOptions", "createFilterInput"] }]
    }
}

